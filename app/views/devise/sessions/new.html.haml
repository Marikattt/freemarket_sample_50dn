.contents
  = render 'users/eachpage-header'       
  .main-contents
    .single-content
      .single-content__head 
        = link_to '/users/sign_up/index' do
          %p.message
            アカウントをお持ちでない方はこちら
          %input{type: "button",class: "btn-default button-blue costom__main", value: "新規会員登録"}
      .single-content__inner
        .single-content__action
          .single-content__inner__action__form
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form--label
                = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
              .form--label
                = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
                = f.submit "次へ進む", class: "btn-default button-red costom__main"
  = render 'users/eachpage-footer'
  