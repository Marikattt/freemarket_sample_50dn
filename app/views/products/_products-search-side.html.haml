.search-side-bar
  .search-sort
  %select.input-search-default
    %option{:value => "1"} 並べ替え
    %option{:value => "2"} 価格の安い順
    %option{:value => "3"} 価格の高い順
    %option{:value => "4"} 出品の古い順
    %option{:value => "5"} 出品の新しい順
    %option{:value => "6"} いいね!の多い順
  .search-dropdown-content
    %h3.search-title 詳細検索
    .form-group
      .searcn-icon.fas.fa-plus
      %span キーワードを入力する
      %input.input-search-default
    .form-group
      .searcn-icon.fas.fa-list
      %span カテゴリーを選択する
      %select.input-search-default{:placeholder => "すべて"}
    .form-group
      .searcn-icon.fas.fa-tag
      %span ブランド名から探す
      %input.input-search-default{:placeholder => "例）シャネル"}
    .form-group
      .searcn-icon.fas.fa-wrench
      %span サイズを指定する
      %select.input-search-default
    .form-group
      .searcn-icon.fas.fa-coins
      %span 価格
      %select.input-search-default
        %option{:value => "1"} 選択して下さい
        %option{:value => "2"} 300 ~ 1000
        %option{:value => "3"} 1000 ~ 5000
        %option{:value => "4"} 5000 ~ 10000
        %option{:value => "5"} 10000 ~ 50000
        %option{:value => "6"} 50000 ~
        %input.input-search-default2{:placeholder => "¥Min"}
        %span ~
        %input.input-search-default2{:placeholder => "¥Max"}
    .form-group
      .searcn-icon.fas.fa-star
      %span 商品の状態
      .checkbox-form.clearfix
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label すべて
        .checkbox-form__right
          %input.checkbox-default{:type => "checkbox"}
          %label 新品、未使用
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label 未使用に近い
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label 目立った傷や汚れなし
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label やや傷や汚れあり
        .checkbox-form__right
          %input.checkbox-default{:type => "checkbox"}
          %label 傷や汚れあり
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label 全体的に状態が悪い
    .form-group
      .searcn-icon.fas.fa-truck
      %span 配送料の負担
      .checkbox-form.clearfix
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label すべて
        .checkbox-form__right
          %input.checkbox-default{:type => "checkbox"}
          %label 着払い(購入者負担)
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label 送料込み(出品者負担)
    .form-group
      .searcn-icon.fas.fa-shopping-cart
      %span 販売状況
      .checkbox-form.clearfix
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label すべて
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label 販売中
        .checkbox-form__left
          %input.checkbox-default{:type => "checkbox"}
          %label 売り切れ
    .search-extend-btn.clearfix
      .btn-default.btn-gray クリア
      %button.btn-default.btn-red 完了
