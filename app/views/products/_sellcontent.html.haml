      -#   = f.file_field :image, class:"upload-5"
      
      .sellContent__form--error
        画像がありません

    .sellContent
      .sellContent__form
        .sellContent__form--label
          = f.label "商品名"
          %span{class:"form-require"} 必須
        = f.text_field :name, class:"input-default", placeholder: "商品名（必須40字まで）"
        .sellContent__form--error
          入力してください

      .sellContent__form
        .sellContent__form--label
          = f.label "商品の説明"
          %span{class:"form-require"} 必須
        = f.text_area :description, rows:"4", cols:"40", class:"textarea-default", placeholder:"商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
        .sellContent__form--error
          入力してください

    .sellContent
      .sellContent__select
        .sellContent__select__left
          商品の詳細
        .sellContent__select__right
          .sellContent__select__right__form
            .sellContent__select__right__form--label
              = f.label "カテゴリー"
              %span{class:"form-require"} 必須


          .selContent__select__left--select
            = f.select :condition, options_for_select(@category.roots.name)
      
            %i.fa.fa-chevron-down
      
          .selContent__select__left--select
            = f.select :condition, options_for_select(Product.conditions)
            %i.fa.fa-chevron-down

          .selContent__select__left--select
            = f.select :condition, options_for_select(Product.conditions)
            %i.fa.fa-chevron-down

          .sellContent__select__right__form--error
            選択してください

          .sellContent__select__right__form
            .sellContent__select__right__form--label
              = f.label "商品の状態"
              %span{class:"form-require"} 必須
            = f.select :condition, options_for_select(Product.conditions)
            %i.fa.fa-chevron-down
            .sellContent__select__right__form--error
              選択してください

    .sellContent
      .sellContent__select
        .sellContent__select__left
          配送について
          =link_to '?'

        .sellContent__select__right
          .sellContent__select__right__form
            .sellContent__select__right__form--label
              = f.label "配送料の負担"
              %span{class:"form-require"} 必須
            = f.select :who_to_pay, options_for_select(Product.who_to_pays)
            %i.fa.fa-chevron-down
            .sellContent__select__right__form--error
              選択してください

          .sellContent__select__right__form
            .sellContent__select__right__form--label
              = f.label "発送元の地域"
              %span{class:"form-require"} 必須
            
            = f.select :origin_of_delivery, options_for_select(Product.origin_of_deliveries)
            = fa_icon 'angle-down', class: "select-prefecture__scrollIcon"
            
            .sellContent__select__right__form--error
              選択してください

          .sellContent__select__right__form
            .sellContent__select__right__form--label
              = f.label "発送までの日数"
              %span{class:"form-require"} 必須
            = f.select :deliverying_date, options_for_select(Product.deliverying_dates)
            %i.fa.fa-chevron-down
          .sellContent__select__right__form--error
            選択してください

    .sellContent
      .sellContent__select
        .sellContent__select__left
          販売価格(300〜9,999,999)
          = link_to '?'
        .sellContent__select__right
          .sellContent__select__right__priceForm
            .sellContent__select__right__priceForm__input
              .sellContent__select__right__priceForm--label
                = f.label "価格"
                %span{class:"form-require"} 必須
              .sellContent__select__right__priceForm--input
                %p ￥  
              = f.text_field :price, placeholder: "例）300"
            .sellContent__select__right__priceForm--error
              300以上9999999以下で入力してください
          .sellContent__select__right__charge
            .sellContent__select__right__charge--left
              %p 販売手数料(10)％
            .sellContent__select__right__charge--right
              %p#charge -
          .sellContent__select__right__profitContent
            .sellContent__select__right__profitContent--left
              販売利益
            .sellContent__select__right__profitContent--right
              %p#profit -
    .sellContent
      %p 
        = link_to '禁止されている出品'
        、
        = link_to '行為'
        を必ずご確認ください。
      %p 
        またブランド品でシリアルナンバー等がある場合はご記載ください。
        = link_to '偽ブランドの販売'
        は犯罪であり処罰される可能性があります。
      %p 
        また、出品をもちまして
        = link_to '加盟店規約'
        に同意したことになります。
     
      .button-wrapper
        = f.submit "出品する", {class:"red-button"}

      .button-wrapper.gray-button
        = link_to "戻る", root_path 
       
        
       
