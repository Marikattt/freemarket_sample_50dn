.contents
  .signup-bar
    .signup-bar__log
      =image_tag "Mercari_logo.png", class: 'Mercari-logo'
     
      
    .signup-bar__progress
      .signup-bar__progress__box
        .signup-bar__progress__box--title
          %li.signup-bar
            会員情報
            .signup-bar__progress__box--status__first
      

      .signup-bar__progress__box
        .signup-bar__progress__box--title
          %li.signup-bar
            電話番号認証
            .signup-bar__progress__box--status__second
          

      .signup-bar__progress__box
        .signup-bar__progress__box--title
          %li.signup-bar
            お届け先住所入力
            .signup-bar__progress__box--status__third
          
          

      .signup-bar__progress__box
        .signup-bar__progress__box--title
          %li.signup-bar__active
            支払い方法
            .signup-bar__progress__box--status__forth
          
          

      .signup-bar__progress__box
        .signup-bar__progress__box--title
          %li.signup-bar
            完了
            .signup-bar__progress__box--status__fifth
          
        
  .main-contents
    .single-content
      .single-content__head 支払い方法
      .single-content__inner
        .single-content__action
          .single-content__inner__action__form
            .form--label
              %label{:for => "card_number"} カード番号
              %span.form-require 必須
              %input.input-default{:name => "input_card_number", :placeholder => "半角英数字のみ", :type => "number", :value => ""}/
            
              .form-group
                %label{:for => "expiration_date"} 有効期限
                %span.form-require 必須
                .expiration_date-select-wrap
                  .select-wrap.select-wrap__month
                    %select.select-default{:name => "month"}
                    %i.icon-arrow-bottom
                  %month 月
                .expiration_date-select-wrap
                  .select-wrap.select-wrap__year
                    %select.select-default{:name => "year"}
                    %i.icon-arrow-bottom
                  %year 年

            .form--label
              %label{:for => "security_code"} セキュリティコード
              %span.form-require 必須
              %input.input-default{:name => "input_card_number", :placeholder => "カード背面4桁もしくは3桁の番号", :type => "number", :value => ""}/
              %p.question 
                カード裏面の番号とは?
               
            .clearfix
              %input{type: "button",class: "btn-default button-red costom__main", value: "次へ進む"}
              